<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yang.spinach.resources.dao.ResourcesDao">
	<resultMap id="ResourcesMap" type="com.yang.spinach.resources.entity.Resources">

		<id column="id" property="id" />
		<result column="pid" property="pid" />
		<result column="name" property="name" />
		<result column="type" property="type" />
		<result column="sort" property="sort" />
		<result column="url" property="url" />
		<result column="permission" property="permission" />
		<result column="icon" property="icon" />
		<result column="disabled" property="disabled" />
		<result column="description" property="description" />
	</resultMap>

	<!--保存 -->
	<insert id="saveResources" parameterType="com.yang.spinach.resources.entity.Resources"
		useGeneratedKeys="true" keyProperty="id">
		insert into t_resources
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="pid != null">
				pid,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="type != null">
				type,
			</if>
			<if test="sort != null">
				sort,
			</if>
			<if test="url != null">
				url,
			</if>
			<if test="permission != null">
				permission,
			</if>
			<if test="icon != null">
				icon,
			</if>
			<if test="disabled != null">
				disabled,
			</if>
			<if test="description != null">
				description,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id},
			</if>
			<if test="pid != null">
				#{pid},
			</if>
			<if test="name != null">
				#{name},
			</if>
			<if test="type != null">
				#{type},
			</if>
			<if test="sort != null">
				#{sort},
			</if>
			<if test="url != null">
				#{url},
			</if>
			<if test="permission != null">
				#{permission},
			</if>
			<if test="icon != null">
				#{icon},
			</if>
			<if test="disabled != null">
				#{disabled},
			</if>
			<if test="description != null">
				#{description},
			</if>
		</trim>
	</insert>

	<!--修改 -->
	<update id="updateResourcesById" parameterType="com.yang.spinach.resources.entity.Resources">
		update t_resources
		<set>
			<if test="id != null">
				id=#{ id },
			</if>
			<if test="pid != null">
				pid=#{ pid },
			</if>
			<if test="name != null">
				name=#{ name },
			</if>
			<if test="type != null">
				type=#{ type },
			</if>
			<if test="sort != null">
				sort=#{ sort },
			</if>
			<if test="url != null">
				url=#{ url },
			</if>
			<if test="permission != null">
				permission=#{ permission },
			</if>
			<if test="icon != null">
				icon=#{ icon },
			</if>
			<if test="disabled != null">
				disabled=#{ disabled },
			</if>
			<if test="description != null">
				description=#{ description },
			</if>
		</set>
		where
		id=#{ id }
	</update>

	<!--查询 -->
	<select id="selectResourcesById" resultMap="ResourcesMap"
		parameterType="java.lang.Long">
		select *
		from t_resources
		where
		id=#{ id }
	</select>

	<select id="list" resultMap="ResourcesMap"
		parameterType="com.yang.spinach.resources.entity.Resources">
		select * from t_resources where 1=1
		<if test="resource.id != null">
		and	id=#{ resource.id }
		</if>
		<if test="resource.pid != null">
		and	pid=#{ resource.pid }
		</if>
		<if test="resource.name != null">
			and	name=#{ resource.name }
		</if>
		<if test="resource.type != null">
			and	type=#{ resource.type }
		</if>
		<if test="resource.sort != null">
			and	sort=#{ resource.sort }
		</if>
		<if test="resource.url != null">
			and	url=#{ resource.url }
		</if>
		<if test="resource.permission != null">
			and	permission=#{ resource.permission }
		</if>
		<if test="resource.icon != null">
			and	icon=#{ resource.icon }
		</if>
		<if test="resource.disabled != null">
			and	disabled=#{ resource.disabled }
		</if>
		<if test="resource.description != null">
			and	description=#{ resource.description }
		</if>
	</select>

	<select id="findByAccountId" resultMap="ResourcesMap"
		parameterType="java.lang.Long">
		select DISTINCT p.* from t_resources p
		INNER JOIN
		t_role_resources rp on p.ID=rp.resources_ID
		INNER JOIN t_role r ON
		r.id=rp.ROLE_ID
		INNER JOIN t_account_role ur ON ur.ROLE_ID =rp.ROLE_ID
		INNER JOIN t_account u ON u.id = ur.USER_ID
		where u.id=#{id} and
		u.disabled=0 order by p.sort
	</select>
</mapper>